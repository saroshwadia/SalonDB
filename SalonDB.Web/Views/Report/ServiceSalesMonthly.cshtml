@model SalonDB.Web.Models.ServiceSalesMonthlyViewModel
<div>
    <div class="row">

        <div class="col-md-2">
            <div class="row top-buffer">

                <label style="font-size:medium">Select Month</label>
                @Html.EJ().DropDownList("ddlMonth").Datasource((IEnumerable<string>)Model.Month).Width("150px")
                <div id="container" style="width:950px; height:500px">


                </div>
            </div>

            </div>
            <div class="col-md-2">
                <div class="row top-buffer">

                    <label style="font-size:medium">Select Year</label>
                    @Html.EJ().DropDownList("ddlYear").Datasource((IEnumerable<string>)Model.Year).Width("150px")
                </div>
            </div>

        <div class="col-md-2">
            <label style="font-size:medium"></label>
            <div class="row top-buffer">

                    <button type="button" class="btn btn-primary" id="BtnView" onclick="viewChartServiceSalesMonthly()">Display</button>
                </div>


            </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/SalonDB.js"></script>